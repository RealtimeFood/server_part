      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- 모든 컴파일된 플러그인을 포함합니다 (아래), 원하지 않는다면 필요한 각각의 파일을 포함하세요 -->
    <script src="js/bootstrap.min.js"></script>
    <script>
    function btnProductClick(){
    var inputdata = $('input[name=productname]').val();
    var url = "http://35.200.0.166:3000/api/Product/" + inputdata
    $.ajax({
        type:"POST",
        url:url,
        data : {name : inputdata},
        dataType : "json",
        success: function(json){
          if(json['result'] == "true"){
            alert('물품이 있습니다.');
          }else {
            fr.isCheckedProduct.name = "true";
            alert('사용가능한 물품 이름입니다.');
          }
        },
        error: function(xhr, status, error) {
          alert('오류 발생');
        }
    });
  };

function check() {
  if(fr.productname.value == "") {
    alert("물품이름을 입력해 주세요.");
    fr.productname.focus();
    return false;
  }




  else if(fr.productorgin.value == "") {
    alert("원산지를 입력해주세요.");
    fr.productorgin.focus();
    return false;
  }

  else if(fr.productcost.value == "") {
    alert("물품가격을 입력해 주세요.");
    fr.productcost.focus();
    return false;
  }

  else if(fr.coverimg.value == "") {
    alert("커버사진을 추가 주세요.");
    fr.coverimg.focus();
    return false;
  }
  else if(fr.productimg.value == "") {
    alert("물품사진을 입력해 주세요.");
    fr.productimg.focus();
    return false;
  }else if(fr.isCheckedProduct.name == "false"){
    alert("상품 중복확인을 해주세요");
    return false;
  }

  else return true;
}
    </script>

  </head>

  <body>

<div class="contentwrap">
<article class="container">
<div class="page-header">
<h1>물품추가 <small>상품 주인 인증을 꼭해주세요</small></h1>
</div>
<form name="fr" class="form-horizontal" action = "/api/Product/success" method = "post" onsubmit="return check()" enctype="multipart/form-data">
<div class="form-group">
<label for="inputEmail" class="col-sm-2 control-label">상품이름</label>
<div class="col-sm-6">
<input type="text" class="form-control" id="productname" name="productname" placeholder="상품이름">
<button type="button"class="btn btn-danger" id='autorization' onClick='btnProductClick()'>상품 인증</button>
</div>
</div>

<div class="form-group">
<label for="inputName" class="col-sm-2 control-label">물품전용 농장 이름</label>
<div class="col-sm-6">
<input type="text" class="form-control" id="productorgin" name="productorgin" placeholder="원산지">
</div>
</div>
<div class="form-group">
<label for="inputName" class="col-sm-2 control-label">가격</label>
<div class="col-sm-6">
<input type="text" class="form-control" id="producost" name="productcost" placeholder="가격">
</div>
</div>
<div class="form-group">
  <label for="inputName" class="col-sm-2 control-label">커버 이미지 추가</label>
  <div class="col-sm-6">
  <input type="file" class="form-control" id="coverimg" name ="coverimg">
  </div>
</div>

<div class="form-group">
<label for="inputName" class="col-sm-2 control-label">상품 이미지 추가</label>
<div class="col-sm-6">
<input type="file" class="form-control" id="productimg" name = "productimg">
</div>
</div>
<input type="hidden" id="isCheckedProduct" name = "false">
<input type="hidden" id="formainpage" name="formainpage" value="true">
<div class="form-group">
<label for="inputName" class="col-sm-2 control-label"></label>
<div class="col-sm-6">
  <button class="btn btn-primary" id="submit" type="submit">양식제출</button>
</div>
</div>
</form>
</article>
</div>
  </form>
    </div>

  </body>

</html>
