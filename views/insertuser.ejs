    <script>
    function btnClick(){
    var inputdata = $('input[name=id]').val();
    var url = "./auth/" + inputdata
    $.ajax({
        type:"POST",
        url:url,
        data : {name : inputdata},
        dataType : "json",
        success: function(json){
          if(json['result'] == "true"){
            alert('id가 중복됩니다.');
          }else {
            console.log(fr.isChecked.value);
            fr.isChecked.value = "true";
            alert('사용가능한 e-mail입니다.');
          }
        },
        error: function(xhr, status, error) {
          alert('오류 발생');
        }
    });
  };

function check() {
  if(fr.id.value == "") {
    alert("id를 입력해주세요");
    fr.id.focus();
    return false;
  }

  else if(fr.age.value == "") {
    alert("나이를 입력해주세요");
    fr.age.focus();
    return false;
  }


  else if(fr.password.value == "") {
    alert("비밀번호를 입력해주세요.");
    fr.password.focus();
    return false;
  }

  else if(fr.name.checkpw == "") {
    alert("비밀번호를 확인해주세요.");
    fr.name.focus();
    return false;
  }
  else if(fr.name.value == "") {
    alert("이름을 입력해 주세요.");
    fr.name.focus();
    return false;
  }

  else if(fr.isChecked.value == "false") {
    alert("중복확인을 해주세요");
    return false;
  }
  else return true;
}
    </script>
  </head>

  <body>

<div class="contentwrap">
<article class="container">
<div class="page-header">
<h1>회원가입 <small>일반회원가입</small></h1>
</div>
<form name="fr"class="form-horizontal" action = "success" method = "post" onsubmit="return check()">
<div class="form-group">
<label for="inputEmail" class="col-sm-2 control-label">이메일</label>
<div class="col-sm-6">
<input type="email" class="form-control" id="id" name="id" placeholder="이메일">
<input type = "hidden" id="isChecked"  name="false" value = "false">
<button type="button"class="btn btn-danger" id='autorization' onClick='btnClick()'>중복확인</button>
</div>
</div>
<div class="form-group">
<label for="inputEmail" class="col-sm-2 control-label">나이</label>
<div class="col-sm-6">
<input type="text" class="form-control" id="age" name = "age"placeholder="나이">
</div>
</div>
<div class="form-group">
<label for="inputPassword" class="col-sm-2 control-label">비밀번호</label>
<div class="col-sm-6">
<input type="password" class="form-control" id="password" name = "password"placeholder="비밀번호">
<p class="help-block">숫자, 특수문자 포함 8자 이상</p>
</div>
</div>
   <div class="form-group">
<label for="inputPasswordCheck" class="col-sm-2 control-label">비밀번호 확인</label>
<div class="col-sm-6">
<input type="password" id="checkpw"class="form-control" placeholder="비밀번호 확인">
  <p class="help-block">비밀번호를 한번 더 입력해주세요.</p>
</div>
</div>
<div class="form-group">
<label for="inputName" class="col-sm-2 control-label">이름</label>
<div class="col-sm-6">
<input type="text" class="form-control" id="name" name = "name" placeholder="이름">
</div>
</div>
<div class="form-group">
<label for="inputName" class="col-sm-2 control-label"></label>
<div class="col-sm-6">
  <button type="submit" class="btn btn-primary">회원가입</button>
</div>
</div>
</form>
</article>
</div>

      </form>
